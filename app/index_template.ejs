<!DOCTYPE html>
<html ng-strict-di ng-app="booksApp">

<head>
    <title>Books By ByteMark</title>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width">
</head>

<body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <div class="container-fluid">
            <a class="navbar-brand" ui-sref="books">ByteMark's Task</a>
        </div>

    </nav>

    <div class="container">
        <toaster-container toaster-options="{'time-out': 3000, 'close-button':true, 'animation-class': 'toast-top-right'}"></toaster-container>
        <div ui-view></div>
    </div>
    <script>
    window.paceOptions = {
        document: true,
        eventLag: true,
        restartOnPushState: true,
        restartOnRequestAfter: true,
        ajax: {
            trackMethods: ['POST', 'GET']
        }
    }
</script>
</body>
</html>